{
  "manifest_version": 3,
  "name": "ClarityRead â€” Reading Mode + Dyslexia Support",
  "version": "0.1.0",
  "description": "Toggle dyslexia-friendly font, reflow text, contrast, and read-aloud on any page.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["src/contentScript.js"],
      "css": ["src/inject.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/fonts/OpenDyslexic-Regular.woff2",
        "src/inject.css",
        "src/lib/chart.umd.min.js",
        "src/toast.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "commands": {
    "read-aloud": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Start reading aloud the main content"
    },
    "stop-reading": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Stop reading aloud"
    }
  }
}
